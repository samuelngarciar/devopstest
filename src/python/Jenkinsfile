pipeline {

 agent any
    stages {
        stage("build image") {
            steps {
                script {
                    sh "cd src/python; sudo podman build -t test/program:latest ."
                }
            }
        }
        
         stage("push in dockerhub") {
            steps {
            
                     withCredentials([usernamePassword(credentialsId: 'DOCKERHUBID', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                    sh '''
                        podman login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD

                        
                    '''

                    sh "cd src/python; sudo podman push localhost/test/program:latest samys288/mypython:latest"
                }
            }
        }
        
        
         stage("deploy in k3s") {
            steps {
                script {
                    sh "sudo kubectl create deployment mspython --image=samys288/mypython:latest"
                    sh "sudo kubectl expose deployment mspython --port=9191 --target-port=8080 --type=ClusterIP"
                }
            }
        }
    }
}
